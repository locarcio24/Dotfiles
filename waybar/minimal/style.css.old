* {
  font-family: "CaskaydiaCove Nerd Font", "Font Awesome 6 Free", "Font Awesome 6 Free Solid";
  font-size: 16px;
  border-radius: 0;
  min-height: 0;
  border: none;
  font-weight: bold;
}

window#waybar {
  all:unset;
}

.modules-left {
  /*** padding: 1px;
  margin: 5px 5px 0px 5px; ***/
  margin: 5px 5px 0px 5px;
  border-radius: 4px;
}

.modules-center {
  all: initial;
  min-width: 0;
  box-shadow: inset 0 -3px transparent;
  border-radius: 4px;
  margin: 0px 0px 0px 3px;
  font-weight: 500;
  background-color: rgba(36, 36, 52, 1.0);
  color: #F8F8F2;
}

.modules-right {
  all: initial;
  min-width: 0;
  box-shadow: inset 0 -3px transparent;
  border-radius: 4px;
  padding: 10px 5px 10px 0px;
  margin: 0px 5px 8px 8px;
  font-weight: 500;
  background-color: rgba(36, 36, 52, 1.0);
  color: #F8F8F2;
}

#workspaces{
  border: none;
  box-shadow: none;
}

#battery,
#pulseaudio,
#backlight,
#network,
#cpu,
#custom-temperature {
  padding: 10px 0px;
}

#clock {
  font-size: 28px;
  padding: 8px 0px 8px 4px;
}

#waybar.hidden {
  opacity: 0.5;
}

#workspaces button {
  all: initial;
  min-width: 0;
  box-shadow: inset 0 -3px transparent;
  padding: 12px 0px;
  margin: 3px 0px 3px 6px;
  border-radius: 4px;
  background-color: rgba(36, 36, 52, 1.0);
  color: #F8F8F2;
}

#workspaces button.focused {
  color: #1e1e2e;
  background-color: #cdd6f4;
}

#workspaces button:hover {
  box-shadow: inherit;
  text-shadow: inherit;
  color: #1e1e2e;
  background-color: #cdd6f4;
}

tooltip {
  border-radius: 8px;
  padding: 16px;
  background-color: #131822;
  color: #C0C0C0;
}

tooltip label {
  padding: 5px;
  background-color: #131822;
  color: #C0C0C0;
}
